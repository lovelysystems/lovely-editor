{
  "name": "lovely-editor",
  "version": "1.3.0",
  "description": "Lovely Editor",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Lovely Systems GmbH <office@lovelysystems.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.12",
    "npm": "^6.11.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lovelysystems/lovely-editor.git"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:vendor-css && npm run build:css",
    "build:css": "node-sass --include-path scss sass/lovely-editor.scss dist/lovely-editor.min.css --output-style compressed",
    "build:js": "babel src --out-dir dist --ignore *.spec.js,test,tests,*.stories.js,example-* --source-maps ",
    "build:storybook": "build-storybook -o dist/storybook",
    "build:vendor-css": "cp node_modules/quill/dist/quill.core.css dist && cp node_modules/quill/dist/quill.snow.css dist",
    "commit": "git-cz",
    "commit-repeat": "git-cz --retry",
    "coverage": "NODE_ENV=test nyc --reporter=html --reporter=text -- mocha -r @babel/register -r src/tests/helpers/test-setup.js --colors --exit \"./src/**/*.spec.js\" && nyc report",
    "lint": "eslint 'src/**/*.js' --fix",
    "posttest": "npm run lint",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "pretest": "npm run test:node",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 9009",
    "test": "mocha -r @babel/register -r src/tests/helpers/test-setup.js -r ignore-styles --colors \"./src/**/*.spec.js\"",
    "test:node": "check-node-version --node '>='$(cat .nvmrc)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "**/tests/polyfills/*.js",
      "dist",
      ".storybook"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "dependencies": {
    "codemirror": "^5.49.2",
    "highlight.js": "^9.15.10",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react-beautiful-dnd": "^6.0.2",
    "react-bem-helper": "^1.4.1",
    "react-codemirror2": "^5.1.0",
    "react-quill": "^1.3.3",
    "tui-editor": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@material-ui/core": "1.3.0",
    "@storybook/addon-actions": "5.2.5",
    "@storybook/addon-options": "5.2.5",
    "@storybook/react": "5.2.5",
    "babel-eslint": "8.2.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "4.1.5",
    "check-node-version": "3.2.0",
    "code": "5.2.0",
    "commitizen": "^4.0.3",
    "css-loader": "3.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "eslint": "4.18.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "font-awesome": "4.7.0",
    "husky": "^3.0.9",
    "ignore-styles": "5.0.1",
    "jsdom": "11.6.2",
    "jsdom-global": "3.0.2",
    "lint-staged": "^9.4.2",
    "mocha": "5.0.1",
    "mock-require": "3.0.3",
    "node-sass": "4.13.0",
    "nyc": "11.4.1",
    "postcss-loader": "^3.0.0",
    "prettier": "1.10.2",
    "raw-loader": "3.1.0",
    "react": "^16.4.2",
    "react-addons-test-utils": "15.6.2",
    "react-dom": "16.7.0",
    "react-test-renderer": "16.11.0",
    "rimraf": "2.6.2",
    "sass-loader": "7.3.1",
    "sinon": "4.3.0",
    "storybook-readme": "5.0.8",
    "style-loader": "1.0.0"
  }
}
